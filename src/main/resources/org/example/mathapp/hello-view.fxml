<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="CENTER" hgap="20" style="-fx-background-color: #e9ecef; -fx-padding: 20;" vgap="20" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23" fx:controller="org.example.mathapp.HelloController">

  <Label style="-fx-font-size: 20px; -fx-text-fill: #343a40; -fx-font-weight: bold; -fx-alignment: CENTER;" text="Решение систем уравнений методом Гаусса" GridPane.columnSpan="2" GridPane.rowIndex="0" />

  <Label style="-fx-font-size: 16px; -fx-text-fill: #495057; -fx-font-weight: bold;" text="Введите количество строк (n):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
  <TextField fx:id="inputN" style="-fx-font-size: 16px; -fx-padding: 10; -fx-border-color: #ced4da; -fx-background-color: white;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

  <Label style="-fx-font-size: 16px; -fx-text-fill: #495057; -fx-font-weight: bold;" text="Введите количество столбцов (m):" GridPane.columnIndex="0" GridPane.rowIndex="2" />
  <TextField fx:id="inputM" style="-fx-font-size: 16px; -fx-padding: 10; -fx-border-color: #ced4da; -fx-background-color: white;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

  <Button onAction="#onCreateMatrixClick" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10; -fx-background-radius: 5;" text="Создать матрицу" GridPane.columnIndex="1" GridPane.rowIndex="3" />

  <Label style="-fx-font-size: 16px; -fx-text-fill: #495057; -fx-font-weight: bold;" text="Введите коэффициенты для каждой строки (через пробел):" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4" />
  <TextArea fx:id="matrixInputArea" prefColumnCount="30" prefRowCount="5" style="-fx-font-size: 16px; -fx-padding: 10; -fx-border-color: #ced4da; -fx-background-color: white;" GridPane.columnSpan="2" GridPane.rowIndex="5" />

  <Button onAction="#onSolveButtonClick" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10; -fx-background-radius: 5;" text="Решить" GridPane.columnIndex="1" GridPane.rowIndex="6" />

  <Label style="-fx-font-size: 16px; -fx-text-fill: #495057; -fx-font-weight: bold;" text="Результат:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
  <TextArea fx:id="outputArea" prefColumnCount="30" prefRowCount="10" style="-fx-font-size: 16px; -fx-padding: 10; -fx-border-color: #ced4da; -fx-background-color: white;" GridPane.columnSpan="2" GridPane.rowIndex="8" />
   <columnConstraints>
      <ColumnConstraints halignment="LEFT" />
      <ColumnConstraints halignment="RIGHT" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
